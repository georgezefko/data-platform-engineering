# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

cluster_name = "development"

# Path to kind configuration file (relative to terraform directory)
kind_config_path = "../kind-config.yaml"

# ArgoCD configuration
argocd_namespace = "argocd"
argocd_version   = "7.2.7"

# Git repository configuration for ArgoCD applications
git_repo_url   = "https://github.com/georgezefko/kubernetes-roadmap.git"
git_repo_branch = "main"

# Ingress controller
install_ingress_controller = true
ingress_controller_version  = "4.9.1"

# Wait settings
wait_for_argo    = true
argo_wait_timeout = 600

